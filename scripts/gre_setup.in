# Load config file
CONF_FILE=@PKGSYSCONFDIR@/nbma-utils.conf

if [[ ! -e "$CONF_FILE" ]]; then
  echo "Config file not found, should be: $CONF_FILE"
  exit 1;
fi

. $CONF_FILE

# Set GRE tunnel
ip tunnel add $GRE_INTERFACE mode gre key $GRE_KEY ttl $GRE_TTL \
   dev $BASE_NETDEV
ip link set $GRE_INTERFACE up
